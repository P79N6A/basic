<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--
    配置业务bean
    -->
    <bean id="serviceImp" class="com.itcast.basic.spring.config.aop.dynamic.simpleadvisors.ServiceImp"/>

    <!--
    配置通知
    -->
    <bean id="beforeAdvice" class="com.itcast.basic.spring.config.aop.dynamic.simpleadvisors.SimpleMethodBeforeAdvice"/>
    <bean id="aroundAdvice" class="com.itcast.basic.spring.config.aop.dynamic.simpleadvisors.SimpleMethodInterceptor"/>
    <bean id="throwAdvice" class="com.itcast.basic.spring.config.aop.dynamic.simpleadvisors.SimpleThrowsAdvice"/>
    <bean id="afterAdvice"
          class="com.itcast.basic.spring.config.aop.dynamic.simpleadvisors.SimpleAfterReturningAdvice"/>

    <!--
    配置切入点
     1方法名
     2方法名正则表达式
    -->
    <bean id="saveInterceptorFilter" class="org.springframework.aop.support.NameMatchMethodPointcutAdvisor">
        <property name="advice" ref="beforeAdvice"/>
        <property name="mappedNames">
            <list>
                <value>save</value>
            </list>
        </property>
    </bean>

    <bean id="queryInterceptorFilter" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
        <property name="advice" ref="afterAdvice"/>
        <property name="patterns">
            <list>
                <value>com.itcast.basic.spring.config.aop.dynamic.simpleadvisors.*.delete</value>
            </list>
        </property>
    </bean>
    <!--
       配置aop代理工厂
       -->
    <bean id="proxyBeanFactory" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="proxyInterfaces"
                  value="com.itcast.basic.spring.config.aop.dynamic.simpleadvisors.ServiceInterface"/>
        <property name="target" ref="serviceImp"/>
        <property name="interceptorNames">
            <list>
                <value>saveInterceptorFilter</value>
                <value>queryInterceptorFilter</value>
                <value>throwAdvice</value>
                <value>aroundAdvice</value>
            </list>
        </property>
    </bean>

</beans>