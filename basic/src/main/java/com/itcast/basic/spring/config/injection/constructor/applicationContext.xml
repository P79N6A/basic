<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    <bean id="personDao" class="com.itcast.basic.spring.config.injection.constructor.PersonDao">
        <constructor-arg index="0" ref="personService"></constructor-arg>
    </bean>
    <bean id="personService" class="com.itcast.basic.spring.config.injection.PersonService"/>
</beans>